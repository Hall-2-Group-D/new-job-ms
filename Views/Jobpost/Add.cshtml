@model List<AspnetCoreMvcFull.Models.jobpostModel>
@{
}
<div class="container-xl mt-5">
    <div class="text-end mb-4 d-md-flex justify-content-between align-items-center">
        <h1>Data View Table</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCenter">
            Add Job
        </button>
    </div>

    <!-- Include the modal partial view -->

    <div class="card">
        <h5 class="card-header">Job Posted</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>Job ID</th>
                        <th>Job Title</th>
                        <th>Job Description</th>
                        <th>Requirements</th>
                        <th>Location</th>
                        <th>Salary</th>
                        <th>Deadline</th>
                        <th>Status</th>
                        <th>Created_at</th>
                        <th>Updated_at</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var jms in Model)
                    {
                        <tr>
                            <td>@jms.Id</td>
                            <td>@jms.JobTitle</td>
                            <td>@jms.JobDescription</td>
                            <td>@jms.Requirements</td>
                            <td>@jms.Location</td>
                            <td>@jms.SalaryRange</td>
                            <td>@jms.Deadline.ToString("yyyy-MM-dd")</td>
                            <td>@jms.Status</td>
                            <td>@jms.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>@jms.UpdatedAt.ToString("yyyy-MM-dd")</td>


                            <td>
                                <!-- Action buttons (using@Url.Action) -->
                                <a href="@Url.Action("EditJobpost", "Jobpost", new { id = jms.Id })" class="btn btn-sm btn-primary"data-bs-toggle="modal" data-bs-target="#modalCenter">Edit</a>
                                <a href="@Url.Action("Delete", "Jobs", new { id = jms.Id })" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>

        <div class=" col-md-12">
            <!-- Modal -->
            <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <form asp-action="Add" method="post">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">Job Post</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <!-- Job Title (Full Width) -->
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <label for="jobTitle" class="form-label">Job Title</label>
                                        <input type="text" id="jobTitle" name="jobTitle" class="form-control" placeholder="Enter Job Title">
                                    </div>
                                </div>

                                <!-- Two-Column Layout Starts Here -->
                                <div class="row mb-3">
                                    <!-- Job Description -->
                                    <div class="col-lg-6">
                                        <label for="jobDescription" class="form-label">Job Description</label>
                                        <textarea id="jobDescription" name="jobDescription" class="form-control" placeholder="Enter job description here" rows="4"></textarea>
                                    </div>

                                    <!-- Requirements -->
                                    <div class="col-lg-6">
                                        <label for="requirements" class="form-label">Requirements</label>
                                        <textarea id="requirements" name="requirements" class="form-control" placeholder="Enter job requirements" rows="4"></textarea>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <!-- Category -->
                                    <div class="col-lg-6">
                                        <label for="category" class="form-label">Category</label>
                                        <input type="text" id="category" name="category" class="form-control" placeholder="Enter job category">
                                    </div>

                                    <!-- Location -->
                                    <div class="col-lg-6">
                                        <label for="location" class="form-label">Location</label>
                                        <input type="text" id="location" name="location" class="form-control" placeholder="Enter job location">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <!-- Salary Range -->
                                    <div class="col-lg-6">
                                        <label for="salaryRange" class="form-label">Salary Range</label>
                                        <input type="text" id="salaryRange" name="salaryRange" class="form-control" placeholder="Enter salary range">
                                    </div>

                                    <!-- Deadline -->
                                    <div class="col-lg-6">
                                        <label for="deadline" class="form-label">Application Deadline</label>
                                        <input type="date" id="deadline" name="deadline" class="form-control">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <!-- Status -->
                                    <div class="col-lg-6">
                                        <label for="status" class="form-label">Status</label>
                                        <select id="status" name="status" class="form-select">
                                            <option value="active">Active</option>
                                            <option value="inactive">Inactive</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>



        </div>
