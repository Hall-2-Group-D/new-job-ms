@model AspnetCoreMvcFull.Models.updatejobpostModel

@{
}

<div class=" col-md-12">
    <!-- Modal -->
    <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <form asp-action="Editjobpostview" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalCenterTitle">Job Post</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Job Title (Full Width) -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <label for="jobTitle" class="form-label">ID</label>
                                <input type="text" asp-for="Id" id="jobTitle" name="jobTitle" class="form-control" placeholder="Enter Job Title" asp-for="Id" readonly>
                            </div>
                        </div>
                          <div class="row mb-3">
                            <div class="col-12">
                                <label for="jobTitle" class="form-label">Job Title</label>
                                <input type="text" asp-for="JobTitle" id="jobTitle" name="jobTitle" class="form-control" placeholder="Enter Job Title">
                            </div>
                        </div>

                        <!-- Two-Column Layout Starts Here -->
                        <div class="row mb-3">
                            <!-- Job Description -->
                            <div class="col-lg-6">
                                <label for="jobDescription" class="form-label">Job Description</label>
                                <textarea asp-for="JobDescription" id="jobDescription" name="jobDescription" class="form-control" placeholder="Enter job description here" rows="4"></textarea>
                            </div>

                            <!-- Requirements -->
                            <div class="col-lg-6">
                                <label for="requirements" class="form-label">Requirements</label>
                                <textarea asp-for="Requirements" id="requirements" name="requirements" class="form-control" placeholder="Enter job requirements" rows="4"></textarea>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <!-- Category -->
                            <div class="col-lg-6">
                                <label for="category" class="form-label">Category</label>
                                <input asp-for="Category" type="text" id="category" name="category" class="form-control" placeholder="Enter job category">
                            </div>

                            <!-- Location -->
                            <div class="col-lg-6">
                                <label for="location" class="form-label">Location</label>
                                <input asp-for="Location" type="text" id="location" name="location" class="form-control" placeholder="Enter job location">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <!-- Salary Range -->
                            <div class="col-lg-6">
                                <label for="salaryRange" class="form-label">Salary Range</label>
                                <input asp-for="SalaryRange" type="text" id="salaryRange" name="salaryRange" class="form-control" placeholder="Enter salary range">
                            </div>

                            <!-- Deadline -->
                            <div class="col-lg-6">
                                <label for="deadline" class="form-label">Application Deadline</label>
                                <input asp-for="Deadline" type="date" id="deadline" name="deadline" class="form-control">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <!-- Status -->
                            <div class="col-lg-6">
                                <label for="status" class="form-label">Status</label>
                                <select asp-for="Status" id="status" name="status" class="form-select">
                                    <option value="active">Active</option>
                                    <option value="inactive">Inactive</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



</div>
