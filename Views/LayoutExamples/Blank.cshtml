@{
  ViewData["Title"] = "Blank layout - Layouts";
  Layout = "_BlankLayout";
}
@* ************** Content ************** *@

<div class="container mt-5">
    <h1 class="mb-3">Job Listing</h1>
    <div class="d-flex justify-content-around mb-4">
        <button class="btn btn-outline-primary">Featured</button>
        <button class="btn btn-outline-secondary">Full Time</button>
        <button class="btn btn-outline-secondary">Part Time</button>
    </div>

    <!-- Jobs list -->
    <div class="row">
        <!-- Loop through your jobs here, example static content is used -->
        @for (int i = 0; i < 52; i++)



        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Software Engineer</h5>
                        <h6 class="text-muted">TechCom</h6>
                        <p class="small text-muted mb-2">New York, USA | Full Time</p>
                        <p class="mb-2"><strong>Salary:</strong> $123 - $456</p>
                        <p class="mb-3"><strong>Date Line:</strong> 01 Jan, 2045</p>
                        <a href="#" class="btn btn-success">Apply Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
