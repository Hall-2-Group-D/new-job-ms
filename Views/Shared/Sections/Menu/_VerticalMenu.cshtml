@{
    TempData.Keep();

    string? currentPage = ViewContext.HttpContext.Request.Path;
}

<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

    @* ! Hide app brand if navbar-full *@
    <div class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
        <a asp-controller="Dashboards" asp-action="Index" class="app-brand-link">
            <span class="app-brand-logo demo">
                @await Html.PartialAsync("../_Partials/_Macros")
            </span>
            <span class="app-brand-text demo menu-text fw-bold ms-2">@TempData.Peek("appName")</span>
        </a>

        <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
            <i class="bx bx-chevron-left bx-sm d-flex align-items-center justify-content-center"></i>
        </a>
    </div>

    <div class="menu-inner-shadow"></div>

    @* ! Full version menu-items *@
    <ul class="menu-inner py-1">
        <!-- Dashboards -->
        <li class='menu-item@(currentPage.EndsWith("/") || currentPage.StartsWith("/Dashboards/") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon tf-icons bx bx-home-smile"></i>
                <div class="text-truncate" data-i18n="Dashboards">Dashboards</div>
                <span class="badge rounded-pill bg-danger ms-auto">5</span>
            </a>
            <ul class="menu-sub">
                
            </ul>
        </li>

        <!-- Layouts -->
       
     

        <!-- Forms & Tables -->
        <li class="menu-header small text-uppercase"><span class="menu-header-text">Forms &amp; Tables</span></li>
        <!-- Forms -->
        <li class='menu-item@(currentPage.StartsWith("/Forms") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon tf-icons bx bx-user"></i>
                <div>Admin</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/user/userhell" ? " active" : "")'>
                    <a asp-controller="user" asp-action="userhell" class="menu-link">
                        <div>Create User</div>
                    </a>
                </li>
                

                <li class="menu-item@(currentPage == "/Recruiter/Index" ? " active" : "")">
                    <a asp-controller="Recruiter" asp-action="Index" class="menu-link">
                        <div>Registration</div>
                    </a>
                </li>

                <li class='menu-item@(currentPage == "/Home/Recruiter/Index" ? " active open"  : "")'>
                    <a asp-controller="Jobpost" asp-action="Index" class="menu-link">
                            <div>Active Jobs</div>
                        </a>
                    </li>

                <li class='menu-item@(currentPage == "/jobpost/JobCards" ? " active open"  : "")'>
                    <a asp-controller="Jobpost" asp-action="JobCards" class="menu-link">
                            <div> Jobs</div>
                        </a>
                    </li>
                    <li class='menu-item@(currentPage == "/JobListings/ArchivedJobs" ? " active" : "")'>
                        <a href="javascript:void(0);" class="menu-link">
                            <div>Archived Jobs</div>
                        </a>
                    </li>

                <li class='menu-item@(currentPage == "/LayoutExamples/Container" ? " active" : "")'>
                    <a asp-controller="LayoutExamples" asp-action="Container" class="menu-link">
                        <div>jop request</div>
                    </a>
                </li>

                <li class='menu-item@(currentPage == "/Auth/LoginBasic" ? " active" : "")'>
                    <a asp-controller="Auth" asp-action="LoginBasic" class="menu-link">
                        <div>Login</div>  
                    </a>
                </li>


            </ul>
        </li>
        <li class='menu-item@(currentPage.StartsWith("/FormLayouts") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon tf-icons bx bx-book"></i>
                <div>Report</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/FormLayouts/Vertical" ? " active" : "")'>
                    <a asp-controller="FormLayouts" asp-action="Vertical" class="menu-link">
                        <div>Vertical Form</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/FormLayouts/Horizontal" ? " active" : "")'>
                    <a asp-controller="FormLayouts" asp-action="Horizontal" class="menu-link">
                        <div>Horizontal Form</div>
                    </a>
                </li>
            </ul>
        </li>
        
    </ul>

</aside>
<!-- / Menu -->
